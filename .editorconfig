root = true
[*]
indent_style=space
indent_size=4
tab_width=4
end_of_line=lf
charset=utf-8
trim_trailing_whitespace=true
max_line_length=120
insert_final_newline=true

[*.json]
indent_style=space
indent_size=2
tab_width=2

[*.ts]
indent_style=space
indent_size=2
tab_width=2

[*.js]
indent_style=space
indent_size=2
tab_width=2

[*.jsx]
indent_style=space
indent_size=2
tab_width=2

[*.yml]
indent_style=space
indent_size=2
tab_width=2

[*.md]
indent_style=space
indent_size=4
tab_width=4
