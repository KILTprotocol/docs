{
  "author": "KILT Protocol",
  "name": "kilt-core-features",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts --format=codeframe",
    "lint:fix": "yarn lint --fix",
    "style": "prettier --check --config .prettierrc '**/*.ts'",
    "style:js": "prettier --check --config .prettierrc '**/*.js'",
    "style:fix": "yarn style --write",
    "fix": "yarn lint:fix && yarn style:fix",
    "style:js:fix": "yarn style:js --write --loglevel silent",
    "translate": "yarn tsc -p tsconfig.json && yarn style:js:fix",
    "test": "ts-node run_core_features.ts"
  },
  "dependencies": {
    "@kiltprotocol/sdk-js": "0.29.0-54",
    "axios": "^0.27.2",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "node-fetch": "^2.6.7",
    "prettier": "^2.5.1",
    "ts-node": "^10.6.0",
    "typescript": "^4.8.2"
  }
}
